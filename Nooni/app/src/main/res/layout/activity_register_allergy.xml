<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterAllergyActivity">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_allergyA_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나는"
            android:textAlignment="center"
            android:textColor="@color/nooni"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tv_allergyA_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:text="뭐시기"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rectangle"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/tv_allergyA_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="알레르기가 있다"
            android:textAlignment="center"
            android:textColor="@color/nooni"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_allergyA_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:layout_gravity="center"
                app:srcCompat="@drawable/img_btn_set_no" />

            <ImageButton
                android:id="@+id/btn_allergyA_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                app:srcCompat="@drawable/img_btn_set_yes" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>